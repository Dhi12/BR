  <!-- HERO SLIDER SCRIPT -->
  <script>
    const slides = [
      {
        title: "Premium Indian Black Granite Tiles",
        text: "Crafted for luxury architectural and commercial spaces. Precision-cut black granite tiles supplied to global markets with uncompromising quality.",
        bg: "images/black-granite.png"
      },
      {
        title: "Precision Granite Thresholds & Custom Profiles",
        text: "Manufactured with 25+ years of expertise, our granite thresholds and custom profiles meet exacting global quality and durability standards.",
        bg: "images/thresholds.png"
      },
      {
        title: "25+ Years of Granite Manufacturing Excellence",
        text: "A trusted Indian granite manufacturer supplying premium black granite tiles to architects, builders, and importers across global markets.",
        bg: "images/black-granite.png"
      }
    ];

    let current = 0;

    const hero = document.querySelector(".hero");
    const title = document.getElementById("heroTitle");
    const text = document.getElementById("heroText");

    setInterval(() => {
      title.style.opacity = 0;
      text.style.opacity = 0;

      setTimeout(() => {
        current = (current + 1) % slides.length;

        hero.style.backgroundImage =
          `linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.6)), url('${slides[current].bg}')`;

        title.textContent = slides[current].title;
        text.textContent = slides[current].text;

        title.style.opacity = 1;
        text.style.opacity = 1;
      }, 700);
    }, 5000);
  </script>

